{
  "name": "waktos",
  "version": "1.1.0",
  "description": "Simple, friendly date formatting without the bulk.",
  "keywords": [
    "date",
    "formatting",
    "lightweight",
    "time"
  ],
  "homepage": "https://github.com/fauziralpiandi/waktos#readme",
  "bugs": {
    "url": "https://github.com/fauziralpiandi/waktos/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fauziralpiandi/waktos.git"
  },
  "license": "MIT",
  "author": "Fauzira Alpiandi <fwzyrln@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && gzip -c dist/index.js | wc -c",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "22.15.17",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "@vitest/coverage-v8": "3.1.3",
    "eslint": "9.26.0",
    "prettier": "3.5.3",
    "tsup": "8.4.0",
    "typescript": "5.8.3",
    "vitest": "3.1.3"
  },
  "engines": {
    "node": ">=16"
  }
}
